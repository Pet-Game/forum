@page
@model BanUserPartialModel

<div>
    <form method="post">
        <input hidden disabled asp-for="Ban.UserId" value=""/>
        <input hidden disabled asp-for="Ban.PostId" value=""/>
        <input disabled value="user name"/>
        <textarea asp-for="Ban.Reason" value="reason"></textarea>
        <select onchange="document.getElementById('ban_duration').value = this.value">
            <option value="1">1 day</option>
            <option value="7">1 week</option>
            <option value="30">1 month</option>
            <option value="120">4 months</option>
            <option value="365">1 year</option>
        </select>
        <input asp-for="Ban.Duration" id="ban_duration" value="30"/>
        <input type="submit" value="Ban" class="btn btn-danger" />
    </form>
</div>